    <!-- Campos de horas e descrição -->
    <EditText
        android:id="@+id/hoursField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horas"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/descriptionField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição (Caso Necessário)"
        android:padding="12dp"/>

    <!-- Botões de ação -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/markButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Marcar"
            android:backgroundTint="@color/red"/>

        <Button
            android:id="@+id/unmarkButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Desmarcar"
            android:backgroundTint="@color/red"/>
    </LinearLayout>

    <!-- Rodapé com ícones -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <!-- Ícone de "Home" -->
        <ImageButton
            android:src="@drawable/ic_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <!-- Ícone de "Check-in" -->
        <ImageButton
            android:src="@drawable/ic_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <!-- Ícone de "Calendário" -->
        <ImageButton
            android:src="@drawable/ic_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <!-- Ícone de "Donations" -->
        <ImageButton
            android:src="@drawable/ic_donation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <!-- Ícone de "Rate View" -->
        <ImageButton
            android:src="@drawable/ic_rateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>
